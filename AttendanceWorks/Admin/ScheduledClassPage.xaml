<Page x:Class="AttendanceWorks.Admin.ScheduledClassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AttendanceWorks.Admin"
	  Loaded="Page_Loaded">

	<ScrollViewer HorizontalScrollBarVisibility="Visible">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="50"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*" MinWidth="200"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Label Margin="10" Padding="5" Grid.Row="1" Grid.Column="0" Content="CourseSection"/>
				<ComboBox x:Name="courseSectionComboBox" Grid.Row="1" Grid.Column="1" Margin="10" Padding="5" />
				
				<Label Margin="10" Padding="5" Grid.Row="2" Grid.Column="0" Content="Class Date"/>
				<DatePicker x:Name="classDatePicker" Grid.Row="2" Grid.Column="1" Margin="10" Padding="5" />

				<Label Margin="10" Padding="5" Grid.Row="3" Grid.Column="0" Content="Start Time"/>
				<TextBox x:Name="startTimeTextBox" Grid.Row="3" Grid.Column="1" Margin="10" Padding="5" PreviewTextInput="integerTextBox_PreviewTextInput" />

				<Label Margin="10" Padding="5" Grid.Row="4" Grid.Column="0" Content="End Time"/>
				<TextBox x:Name="endTimeTextBox" Grid.Row="4" Grid.Column="1" Margin="10" Padding="5" PreviewTextInput="integerTextBox_PreviewTextInput" />

				<CheckBox x:Name="statusCheckBox" Margin="10" Padding="5" Grid.Row="5" Grid.Column="0" Content="Status" IsChecked="True"/>
				<Button x:Name="saveButton" Margin="10" Padding="5" Grid.Row="6" Grid.Column="1" MinWidth="120" MinHeight="40" Content="Save" HorizontalAlignment="Center"
		IsDefault="True" Style="{DynamicResource AccentButtonStyle}" Click="saveButton_Click"/>
			</Grid>

			<DataGrid x:Name="scheduledClassDataGrid" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Padding="5" SelectionMode="Single"
  SelectedCellsChanged="scheduledClassDataGrid_SelectedCellsChanged" IsReadOnly="True" MaxHeight="600" MinColumnWidth="100" />

		</Grid>
	</ScrollViewer>
	
</Page>
