<Window x:Class="AttendanceWorks.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceWorks"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Login" Height="200" Width="350">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*" MinWidth="200"/>
		</Grid.ColumnDefinitions>

		<Label Content="Email" Margin="10" Padding="5" />
		<TextBox x:Name="emailTextBox" Grid.Column="1" Margin="10" Padding="5" MaxLength="100" />

		<Label Content="Password" Grid.Row="1" Margin="10" Padding="5" />
		<PasswordBox x:Name="passwordBox" Grid.Row="1" Grid.Column="1" Margin="10" Padding="5" MaxLength="10" />

		<Button x:Name="loginButton" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Login" MinWidth="100" MinHeight="40" Margin="10" Padding="5" Click="loginButton_Click" IsDefault="True" Style="{DynamicResource AccentButtonStyle}" />
	</Grid>
</Window>
