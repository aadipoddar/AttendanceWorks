<Window x:Class="AttendanceWorks.Attendance.MarkAttendance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceWorks.Attendance"
        mc:Ignorable="d" WindowState="Maximized"
        Title="Mark Attendance" Height="450" Width="800"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with class information -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="classInfoTextBlock" 
                               Text="Current Class: No Active Class" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="dateTimeTextBlock" 
                               Text="Date: N/A | Time: N/A" 
                               Foreground="White" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock x:Name="teacherNameTextBlock" 
                               Text="Teacher: N/A" 
                               Foreground="White" 
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="classroomTextBlock" 
                               Text="Classroom: N/A" 
                               Foreground="White" 
                               HorizontalAlignment="Right" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Filter and Search Section -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="searchTextBox" 
                     Grid.Column="0" 
                     Margin="0,0,10,0" 
                     Padding="5" 
                     TextChanged="searchTextBox_TextChanged" 
                     FontSize="14"
                     VerticalContentAlignment="Center">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            
            <TextBlock IsHitTestVisible="False" 
                       Text="Search by name or roll number..." 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       Margin="10,0,0,0" 
                       Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=searchTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <Button x:Name="refreshButton" 
                    Grid.Column="1" 
                    Content="Refresh" 
                    Padding="10,5" 
                    Click="refreshButton_Click"/>
        </Grid>
        
        <!-- Student List with Attendance Marking -->
        <DataGrid x:Name="studentsDataGrid" 
                  Grid.Row="2" 
                  Margin="10" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False" 
                  IsReadOnly="False" 
                  AlternatingRowBackground="#F5F5F5"
                  HeadersVisibility="Column" 
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1" 
                  BorderBrush="#DDDDDD">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Roll" Binding="{Binding Roll}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="200" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Present" Binding="{Binding Present}" Width="80"/>
                <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTime}" Width="150" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="markAllPresentButton" 
                    Grid.Column="0" 
                    Content="Mark All Present" 
                    HorizontalAlignment="Left" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Click="markAllPresentButton_Click"/>
            
            <Button x:Name="saveAttendanceButton" 
                    Grid.Column="2" 
                    Content="Save Attendance" 
                    Padding="15,8" 
                    Background="#007ACC" 
                    Foreground="White"
                    Click="saveAttendanceButton_Click"/>
        </Grid>
    </Grid>
</Window>
