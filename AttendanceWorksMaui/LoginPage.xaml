<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AttendanceWorksMaui.LoginPage"
             Title="Login"
			 Loaded="ContentPage_Loaded"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}">

	<Grid RowDefinitions="Auto, *, Auto">
		<!-- Header/Logo Section with Gradient Background -->
		<BoxView Grid.Row="0"
                 HeightRequest="200"
                 VerticalOptions="Start">
			<BoxView.Background>
				<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
					<GradientStop Color="#4CAF50" Offset="0.1"/>
					<GradientStop Color="#2196F3" Offset="0.9"/>
				</LinearGradientBrush>
			</BoxView.Background>
		</BoxView>

		<VerticalStackLayout Grid.Row="0" 
                             Padding="20,40"
                             Spacing="10"
                             VerticalOptions="Center">
			<Image Source="attendance.png" 
                   HeightRequest="80" 
                   WidthRequest="80"
                   HorizontalOptions="Center"
                   SemanticProperties.Description="Attendance Works Logo"/>
			<Label Text="Stu10Dance"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
			<Label Text="Student Portal"
                   FontSize="20"
                   TextColor="Wheat"
                   HorizontalOptions="Center"/>
		</VerticalStackLayout>

		<!-- Login Form Card -->
		<Border Grid.Row="1"
                Margin="20,0,20,20"
                Stroke="Transparent"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                StrokeShape="RoundRectangle 15">
			<Border.Shadow>
				<Shadow Brush="Black"
                Offset="0,5"
                Radius="10"
                Opacity="0.1" />
			</Border.Shadow>

			<VerticalStackLayout Spacing="16" 
                                 Padding="30,40"
                                 VerticalOptions="Start">
				<!-- Email/Roll Number Field -->
				<Border Stroke="{AppThemeBinding Light=#EEEEEE, Dark=#404040}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="0">
					<Grid ColumnDefinitions="Auto, *" 
                          RowDefinitions="Auto"
                          VerticalOptions="Center"
                          Padding="15,5">
						<Image Source="user.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Margin="0,0,10,0"/>
						<Entry x:Name="emailEntry"
                               Placeholder="Roll Number or Email"
                               PlaceholderColor="#999999"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               ClearButtonVisibility="WhileEditing"
                               Keyboard="Email"
                               Grid.Column="1"/>
					</Grid>
				</Border>

				<!-- Password Field -->
				<Border Stroke="{AppThemeBinding Light=#EEEEEE, Dark=#404040}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="0">
					<Grid ColumnDefinitions="Auto, *, Auto" 
                          RowDefinitions="Auto"
                          VerticalOptions="Center"
                          Padding="15,5">
						<Image Source="lock.png"
                               HeightRequest="20"
                               WidthRequest="20"
                               Margin="0,0,10,0"/>
						<Entry x:Name="passwordEntry"
                               Placeholder="Password"
                               PlaceholderColor="#999999"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               IsPassword="True"
                               ClearButtonVisibility="WhileEditing"
                               Grid.Column="1"/>
						<ImageButton Source="view.png"
									 MaximumHeightRequest="20"
									 MaximumWidthRequest="20"
                                     Clicked="TogglePasswordVisibility"
                                     Grid.Column="2"/>
					</Grid>
				</Border>

				<!-- Remember Me -->
				<HorizontalStackLayout Spacing="8" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center" Margin="5">
					<CheckBox x:Name="RememberMeCheckbox" Color="#2196F3"/>
					<Label Text="Remember me"
                            TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                            VerticalOptions="Center"/>
				</HorizontalStackLayout>

				<!-- Login Button -->
				<Button Text="Login"
                        FontAttributes="Bold"
                        FontSize="16"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="25"
                        Margin="0,5,0,0"
                        Clicked="LoginButton_Clicked">
					<Button.Background>
						<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
							<GradientStop Color="#4CAF50" Offset="0.1"/>
							<GradientStop Color="#2196F3" Offset="0.9"/>
						</LinearGradientBrush>
					</Button.Background>
					<Button.Shadow>
						<Shadow Brush="#40000000" Offset="0,5" Radius="10"/>
					</Button.Shadow>
				</Button>

				<!-- Forgot Password -->
				<Label Text="Forgot Password?"
                        TextColor="#2196F3"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="0,15,0,0">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Tapped="ForgotPassword_Tapped"/>
					</Label.GestureRecognizers>
				</Label>

				<!-- Loading Indicator -->
				<ActivityIndicator IsVisible="{Binding IsBusy}"
                   IsRunning="{Binding IsBusy}"
                   Color="#2196F3"
                   HorizontalOptions="Center"
                   Margin="0,20"/>

			</VerticalStackLayout>
		</Border>
	</Grid>
</ContentPage>