<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AttendanceWorksMaui"
             x:Class="AttendanceWorksMaui.AttendanceReportWindow"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1A1A1A}"
             NavigationPage.HasNavigationBar="False"
             Title="Attendance Report">

    <ContentPage.Resources>
        <!-- Add the missing converters -->
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToStyleConverter x:Key="BoolToStyleConverter"/>
        
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#EEEEEE, Dark=#404040}"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#252525}"/>
            <Setter Property="Padding" Value="20"/>
            <!-- Remove the Shadow setter that's causing the issue -->
        </Style>

        <Style x:Key="CardHeaderStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#444444, Dark=#BBBBBB}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <!-- Remove the Shadow setter -->
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BorderWidth" Value="1"/>
            <Setter Property="HeightRequest" Value="45"/>
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="PresentBadgeStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#e7f5e9"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="WidthRequest" Value="90"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <Style x:Key="AbsentBadgeStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#ffebee"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="WidthRequest" Value="90"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterChipStyle" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#DDDDDD, Dark=#555555}"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
            <Setter Property="Padding" Value="15,8"/>
        </Style>

        <!-- Selected Filter Button Style -->
        <Style x:Key="SelectedFilterChipStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="#E3F2FD"/>
            <Setter Property="Stroke" Value="#2196F3"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
            <Setter Property="Padding" Value="15,8"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- The rest of your XAML remains the same -->
        <!-- Header Section with Gradient Background -->
        <BoxView Grid.Row="0"
                 HeightRequest="130"
                 VerticalOptions="Start">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#4CAF50"
                                  Offset="0.1"/>
                    <GradientStop Color="#2196F3"
                                  Offset="0.9"/>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Header Content -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="15,30,25,20">
            <!-- Replace the current back button with this ImageButton -->
            <ImageButton Grid.Column="0"
                        x:Name="BackButton"
                        Source="back.png"
                        HeightRequest="24"
                        WidthRequest="24"
                        BackgroundColor="White"
                        Padding="8"
                        CornerRadius="20"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Clicked="BackButton_Clicked"/>


            <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0">
                <Label Text="Attendance Report" 
                       FontSize="26" 
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label x:Name="StudentNameLabel"
                       Text="Student Name" 
                       FontSize="16" 
                       TextColor="#E0E0E0"
                       Margin="0,2,0,0"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="20,0,20,0" Margin="0,-20,0,0">
            <VerticalStackLayout Spacing="20">
                <!-- Summary Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                            <Label Grid.Column="0" Grid.Row="0"
                                   Text="OVERVIEW" 
                                   Style="{StaticResource CardHeaderStyle}"/>

                            <Label Grid.Column="1" Grid.Row="0"
                                   x:Name="DateRangeLabel"
                                   Text="May 2025" 
                                   Style="{StaticResource CardHeaderStyle}"
                                   HorizontalOptions="End"/>
                        </Grid>

                        <!-- Attendance Summary -->
                        <Grid ColumnDefinitions="*,*,*,*" 
                              RowDefinitions="Auto,Auto"
                              Margin="0,15,0,0">
                            <!-- Summary Stats -->
                            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                                <Label x:Name="TotalClassesLabel"
                                       Text="0" 
                                       FontSize="24" 
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                       HorizontalOptions="Center"/>
                                <Label Text="Classes" 
                                       FontSize="12" 
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" 
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                                <Label x:Name="PresentCountLabel"
                                       Text="0" 
                                       FontSize="24" 
                                       FontAttributes="Bold"
                                       TextColor="#4CAF50" 
                                       HorizontalOptions="Center"/>
                                <Label Text="Present" 
                                       FontSize="12" 
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" 
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                                <Label x:Name="AbsentCountLabel"
                                       Text="0" 
                                       FontSize="24" 
                                       FontAttributes="Bold"
                                       TextColor="#F44336" 
                                       HorizontalOptions="Center"/>
                                <Label Text="Absent" 
                                       FontSize="12" 
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" 
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                                <Label x:Name="AttendanceRateLabel"
                                       Text="0%" 
                                       FontSize="24" 
                                       FontAttributes="Bold"
                                       TextColor="#2196F3" 
                                       HorizontalOptions="Center"/>
                                <Label Text="Rate" 
                                       FontSize="12" 
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}" 
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <!-- Progress Bar -->
                            <Grid Grid.Row="1" Grid.ColumnSpan="4" Margin="0,15,0,5">
                                <Border x:Name="attendanceProgressBackground"
                                      BackgroundColor="#EEEEEE"
                                      StrokeShape="RoundRectangle 5"
                                      Padding="0"
                                      HeightRequest="10"
                                      WidthRequest="250">
                                    <Border x:Name="AttendanceProgressBar"
                                          BackgroundColor="#2196F3"
                                          StrokeShape="RoundRectangle 5"
                                          Padding="0"
                                          HeightRequest="10"
                                          HorizontalOptions="Start"
                                          WidthRequest="100"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Filters -->
                <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="10">
                    <Border Grid.Column="0" Style="{StaticResource SelectedFilterChipStyle}">
                        <Label Text="All"
                               TextColor="#2196F3"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="FilterAll_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource FilterChipStyle}">
                        <Label Text="Present"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="FilterPresent_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource FilterChipStyle}">
                        <Label Text="Absent"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="FilterAbsent_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Border>
                </Grid>

                <!-- Class List -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout>
                        <Label Text="ATTENDANCE DETAILS" 
                               Style="{StaticResource CardHeaderStyle}"/>

                        <CollectionView x:Name="AttendanceCollectionView"
                                       ItemsSource="{Binding AttendanceRecords}"
                                       SelectionMode="None"
                                       Margin="0,10,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,10" 
                                          ColumnDefinitions="*, Auto"
                                          RowDefinitions="Auto, Auto, Auto">

                                        <!-- Course Name and Date -->
                                        <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                                            <Label Text="{Binding CourseName}"
                                                   FontAttributes="Bold"
                                                   FontSize="16"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                            <Label Text="{Binding CourseCode}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#BBBBBB}"/>
                                        </VerticalStackLayout>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="1" Grid.Row="0"
                                                Style="{Binding Present, Converter={StaticResource BoolToStyleConverter}}">
                                            <Label Text="{Binding Present, Converter={StaticResource BoolToStatusConverter}}"
                                                   FontAttributes="Bold"
                                                   FontSize="12"
                                                   TextColor="{Binding Present, Converter={StaticResource BoolToColorConverter}}"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>

                                        <!-- Class Details -->
                                        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                                              ColumnDefinitions="Auto,*,Auto,*"
                                              RowDefinitions="Auto,Auto"
                                              Margin="0,5,0,0">

                                            <Label Grid.Column="0" Grid.Row="0"
                                                   Text="Date: "
                                                   FontAttributes="Bold"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
                                            <Label Grid.Column="1" Grid.Row="0"
                                                   Text="{Binding ClassDate, StringFormat='{0:MMM dd, yyyy}'}"
                                                   FontSize="13"
                                                   Margin="10,0,0,0"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>

                                            <Label Grid.Column="2" Grid.Row="0"
                                                   Text="Time: "
                                                   FontAttributes="Bold"
                                                   FontSize="13"
                                                   Margin="10,0,0,0"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
                                            <Label Grid.Column="3" Grid.Row="0"
                                                   Text="{Binding TimeInfo}"
                                                   FontSize="13"
                                                   Margin="10,0,0,0"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>

                                            <Label Grid.Column="0" Grid.Row="1"
                                                   Text="Room: "
                                                   FontAttributes="Bold"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
                                            <Label Grid.Column="1" Grid.Row="1"
                                                   Grid.ColumnSpan="3"
                                                   Text="{Binding ClassRoomName}"
                                                   Margin="10,0,0,0"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light=#555555, Dark=#BBBBBB}"/>
                                        </Grid>

                                        <!-- Divider -->
                                        <BoxView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                                                 HeightRequest="1"
                                                 Color="{AppThemeBinding Light=#EEEEEE, Dark=#333333}"
                                                 Margin="0,10,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <StackLayout Padding="20">
                                    <Image Source="no_data.png" 
                                           HeightRequest="100" 
                                           WidthRequest="100" 
                                           HorizontalOptions="Center"/>
                                    <Label Text="No attendance records found"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                           HorizontalOptions="Center"/>
                                </StackLayout>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>